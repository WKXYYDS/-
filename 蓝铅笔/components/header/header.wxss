.header {
	width: 750rpx;
	height: 80rpx;
	position: fixed;
	top: 0rpx;
	box-sizing: border-box;
	padding: 0 10rpx;
  border-bottom: 2rpx solid black;
  z-index: 400;
  background-color: white;
}

.header-brand {
	display: inline-block;
	width: 400rpx;
	height: 80%;
	margin-top: 10rpx;
}

.header-brand .header-brand-img {
	width: 100%;
	height: 100%;
}

.header-brand-box {
	display: inline-block;
	width: 170rpx;
	height: 80%;
}

.header-brand-box .header-brand-box-img {
	width: 75%;
	height: 75%;
	margin-bottom: 10rpx;
	margin-left: 10rpx;
}

.header-login {
	display: inline-block;
	width: 165rpx;
	height: 80%;
	position: absolute;
	top: 10rpx;
}

.header-login .lun {
	width: 100%;
	display: inline-block;
	height: 100%;
}

.has-padding {
	width: 165rpx;
	height: 100%;
}

.has-padding .imgss {
	width: 100%;
	height: 100%;
}

.to_login {
	margin-left: 13rpx;
}